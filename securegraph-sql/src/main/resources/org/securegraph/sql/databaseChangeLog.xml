<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="securegraph">
        <createTable tableName="metadata">
            <column name="key" type="varchar(1024)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="value" type="blob">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="vertex">
            <column name="id" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="vertex_hidden_visibility">
            <column name="vertex_id" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="vertex_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="vertex_property">
            <column name="vertex_id" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="vertex_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="blob">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="vertex_property_metadata">
            <column name="vertex_id" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="vertex_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_key" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_name" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="blob">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="vertex_property_hidden_visibility">
            <column name="vertex_id" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="vertex_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_key" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_name" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="property_visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>